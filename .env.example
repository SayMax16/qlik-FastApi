# Application Settings
APP_NAME="Qlik Sense REST API"
APP_VERSION="0.1.0"
DEBUG=true
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# API Settings
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Qlik Sense Configuration
QLIK_SENSE_HOST=your-qlik-sense-server.com
QLIK_SENSE_PORT=4747
QLIK_ENGINE_PORT=4747
QLIK_REPOSITORY_PORT=4242

# Qlik Authentication
QLIK_USER_DIRECTORY=YOUR_DOMAIN
QLIK_USER_ID=your_username

# Certificate Paths (relative to project root)
QLIK_CERT_PATH=certs/client.pem
QLIK_KEY_PATH=certs/client_key.pem
QLIK_ROOT_CERT_PATH=certs/root.pem

# Connection Settings
QLIK_VERIFY_SSL=true
QLIK_CONNECTION_TIMEOUT=30
QLIK_REQUEST_TIMEOUT=60

# WebSocket Settings
QLIK_WS_TIMEOUT=300
QLIK_WS_PING_INTERVAL=30

# API Rate Limiting (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# CORS Settings
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]
